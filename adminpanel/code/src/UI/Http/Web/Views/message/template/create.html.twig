{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block body %}
    <div style="margin-top: 100px"></div>
    <h1>Message/Templates</h1>
    <form method="post" action="{{ path('message.templates.create.post') }}">
        <div class="form-group">
            <label for="phone">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value="">
        </div>
        <div class="form-group">
            <label for="lang">Lang</label>
            <input type="text" class="form-control" name="lang" aria-describedby="lang" placeholder="Lang" value="">
        </div>
        <div class="form-group">
            <label for="type">Type</label>
            <input type="text" class="form-control" name="type" placeholder="Type" value="">
        </div>
        <div class="form-group">
            <label for="subject">Type</label>
            <input type="text" class="form-control" name="subject" placeholder="Subject" value="">
        </div>
        <div class="form-group">
            <label for="context">Context</label>
            <input type="text" class="form-control" name="context" placeholder="Context" value="">
        </div>
        <div class="pull-right">
            <button onclick="goBack()" class="btn btn-secondary">Go Back</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
{% endblock %}