{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block body %}
    <div style="margin-top: 100px"></div>
    <h1>Auth</h1>
    <form method="post" action="{{ path('auth.user.update', {'id': user.id}) }}">
        <div class="form-group">
            <label for="phone">Full name</label>
            <input type="text" class="form-control" name="fullName" placeholder="Full name" value="{{ user.fullName }}">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="email" value="{{ user.email }}">
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" class="form-control"  placeholder="Phone" value="{{ user.phone }}">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="active" checked="{{ user.isActive }}" value="{{ user.isActive }}">
            <label class="form-check-label" for="active">Active</label>
        </div>
        <div class="pull-right">
            <button onclick="goBack()" class="btn btn-secondary">Go Back</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
{% endblock %}